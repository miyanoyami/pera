---
import fs from 'fs';
import path from 'path';
import matter from 'gray-matter';
import { marked } from 'marked';
import '../../styles/global.css';
import '../../styles/blog.css';

export async function getStaticPaths() {
  const blogDir = path.join(process.cwd(), 'src/content/blog');
  const files = fs.readdirSync(blogDir);

  return files
    .filter(file => file.endsWith('.md'))
    .map(file => ({
      params: { slug: file.replace('.md', '') },
    }));
}

const { slug } = Astro.params;

const filePath = path.join(process.cwd(), 'src/content/blog', `${slug}.md`);
const fileContents = fs.readFileSync(filePath, 'utf8');
const { data, content } = matter(fileContents);

const htmlContent = marked(content);
const category = data.category || 'その他';

// Helper function to get category color
function getCategoryColor(category: string) {
  switch (category) {
    case '技術':
      return 'bg-blue-100 text-blue-800';
    case '日記':
      return 'bg-green-100 text-green-800';
    case 'その他':
      return 'bg-gray-100 text-gray-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
}
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{data.title || 'Blog Post'}</title>
    <link rel="icon" type="image/x-icon" href="/pera/favicon.ico" />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-3xl mx-auto px-4 py-12">
      <nav class="mb-8">
        <a href="/pera/blog" class="text-blue-600 hover:text-blue-800 transition-colors">
          ← 一覧に戻る
        </a>
      </nav>

      <article class="bg-white rounded-lg shadow-sm p-8">
        <header class="mb-8">
          <div class="flex items-center gap-3 mb-4">
            <span class={`px-3 py-1 rounded-full text-sm font-medium ${getCategoryColor(category)}`}>
              {category}
            </span>
            <time class="text-sm text-gray-500">
              {new Date(data.date).toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">{data.title}</h1>
        </header>

        <div class="prose prose-lg max-w-none" set:html={htmlContent} />
      </article>
    </div>
  </body>
</html>
